{
  "name": "simple-screens-tester",
  "version": "1.0.0",
  "author": "zoobestik <kb.chernenko@gmail.com>",
  "description": "Simple script for static site screenshot testing",
  "license": "MIT",
  "main": "index.js",
  "engines": {
    "node": ">=13.0.0"
  },
  "keywords": [
    "crawler",
    "screenshots",
    "visual regression",
    "tool",
    "testing"
  ],
  "bugs": {
